# Enable connection sharing
ControlMaster auto
ControlPath /tmp/ssh_mux_%h_%p_%r

# Enable persistent connections
ControlPersist 4h

# Enable agent forwarding
ForwardAgent yes

# Enable resilient connections
TCPKeepAlive no
ServerAliveInterval 60
ServerAliveCountMax 10

# Faster connections by disabling GSSAPI
GSSAPIAuthentication no

# Host aliases
Host htpi
	HostName 192.168.0.49
	User pi

Host memeoirs
	HostName memeoirs.com
	User memeoirs

Host agt
	HostName aghosttrain.com
	User aghosttrain

Host bitmoovcrm
	Hostname ec2-23-23-20-201.compute-1.amazonaws.com
	User ubuntu
	IdentityFile ~/Desktop/bitmoovcrm/bitmoov_amazon_aws_key.pem
